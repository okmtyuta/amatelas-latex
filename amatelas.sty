\newcommand{\TelasHightlight}[1]{
\tcbox[
    on line,
    boxsep=0pt,
    left=2pt,
    right=2pt,
    top=3pt,
    bottom=3pt,
    colframe=ThemeColorPrimaryLighten,
    colback=ThemeColorPrimaryLighten,  
    highlight math style={enhanced}
  ]{\textcolor{ThemeColorPrimary}{#1}}
}

\newcommand{\danger}[1]{
  \begin{tcolorbox}[
    colframe=ThemeColorPrimaryLighten,
    colback=ThemeColorPrimaryLighten
  ]
    {\color{ThemeColorPrimary}#1}
  \end{tcolorbox}
}
\newcommand{\info}[1]{
  \begin{tcolorbox}[
    colframe=ThemeColorSecondaryLighten,
    colback=ThemeColorSecondaryLighten
  ]
    {\color{ThemeColorSecondary}#1}
  \end{tcolorbox}
}
\newcommand{\success}[1]{
  \begin{tcolorbox}[
    colframe=ThemeColorTertiaryLighten,
    colback=ThemeColorTertiaryLighten
  ]
    {\color{ThemeColorTertiary}#1}
  \end{tcolorbox}
}

